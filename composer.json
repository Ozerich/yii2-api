{
  "name": "blakit/yii2-api",
  "description": "Api starter for Yii2 projects",
  "type": "library",
  "license": "Open Source",
  "authors": [
    {
      "name": "Vital Ozierski",
      "email": "v.ozierski@blak-it.com"
    }
  ],
  "require": {
    "php": ">=5.6.0",
    "yiisoft/yii2": "^2.0",
    "firebase/php-jwt": "^4.0",
    "myclabs/php-enum": "^1.5"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "blakit\\api\\": "src/"
    }
  },
  "scripts": {
    "post-install-cmd": "php yii migrate/up --migrationPath='@vendor/blakit/yii2-api/src/migrations' --interactive=0",
    "post-update-cmd": "php yii migrate/up --migrationPath='@vendor/blakit/yii2-api/src/migrations' --interactive=0"
  }
}
